<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.touchlessChef">

    <uses-sdk android:targetSdkVersion="32" />
    <!-- For loading images from gallery -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- For using the camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" /> <!-- For logging solution events -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/touchless_chef_app_icon"
        android:label="Touchless Chef"
        android:roundIcon="@mipmap/touchless_chef_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.standard.recipe.CreateRecipeActivity"
            android:exported="false"
            android:parentActivityName="app.touchlessChef.activity.standard.home.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.standard.home.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.standard.recipe.ViewRecipeActivity"
            android:exported="false"
            android:parentActivityName="app.touchlessChef.activity.standard.home.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.standard.home.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.standard.home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>